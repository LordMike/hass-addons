    "arch": ["amd64", "armv7", "aarch64"],
    "url": "https://github.com/LordMike/MBW.BlueRiiot2MQTT",
    "startup": "application",
    "boot": "auto",
    "environment": {
        "EXTRA_CONFIG_FILE": "/data/options.json"
    },
    "options": {
        "MQTT": {
            "Server": null,
            "Port": null,
            "Username": null,
            "Password": null
        },
        "BlueRiiot": {
            "Username": null,
            "Password": null
        },
        "HASS": {
            "DiscoveryPrefix": null,
            "BlueRiiotPrefix": null
        },
        "Proxy": {
            "Uri": null
        }
    },
    "schema": {
        "MQTT": {
            "Server": "str",
            "Port": "port?",
            "Username": "str?",
            "Password": "str?"
        },
        "BlueRiiot": {
            "Username": "str",
            "Password": "str"
        },
        "HASS": {
            "DiscoveryPrefix": "str?",
            "BlueRiiotPrefix": "str?"
        },
        "Proxy": {
            "Uri": "url?"
        }
    },
    "image": "lordmike/blueriiot2mqtt-{arch}"
}
